<%= form_with model: task do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: "form-label fw-bold" %>
    <%= f.text_field :title, class: "form-control shadow-sm", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: "form-label fw-bold" %>
    <%= f.text_area :description, rows: 4, class: "form-control shadow-sm" %>
  </div>

  <div class="mb-3">
    <%= f.label :status, class: "form-label fw-bold" %>
    <%= f.select :status,
                 options_for_select(
                   [%w[Pending pending], %w[Completed completed]],
                   task.status
                 ),
                 {},
                 class: "form-select shadow-sm" %>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit "Save", class: "btn btn-primary" %>
    <%= link_to "Back", tasks_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
