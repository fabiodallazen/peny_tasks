<tr id="<%= dom_id(task) %>">
  <td><%= task.title %></td>
  <td>
    <div class="dropdown">
      <a class="badge-status <%= task.status == 'completed' ? 'badge-completed' : 'badge-pending' %> dropdown-toggle text-decoration-none"
         href="#"
         role="button"
         id="dropdownStatus<%= task.id %>"
         data-bs-toggle="dropdown"
         aria-expanded="false">
        <%= task.status.capitalize %>
      </a>
      <ul class="dropdown-menu dropdown-menu-end shadow-sm rounded-3" aria-labelledby="dropdownStatus<%= task.id %>">
        <% if task.status == 'pending' %>
          <li>
            <%= link_to "âœ… Mark as Completed",
                        update_status_task_path(task, status: 'completed'),
                        method: :patch,
                        data: { turbo_frame: dom_id(task) },
                        class: "dropdown-item" %>
          </li>
        <% else %>
          <li>
            <%= link_to "ðŸ”„ Reopen Task",
                        update_status_task_path(task, status: 'pending'),
                        method: :patch,
                        data: { turbo_frame: dom_id(task) },
                        class: "dropdown-item" %>
          </li>
        <% end %>
      </ul>
    </div>
  </td>
  <td class="d-flex justify-content-end gap-2">
    <%= link_to "Edit", edit_task_path(task), class: "btn btn-sm btn-outline-primary" %>
    <%= link_to "Delete", task_path(task),
                method: :delete,
                data: { confirm: "Are you sure you want to delete this record?" },
                class: "btn btn-sm btn-outline-danger" %>
  </td>
</tr>
