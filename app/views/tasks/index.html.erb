<div class="container py-3">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Tasks</h1>
    <%= link_to "New Task", new_task_path, class: "btn btn-success" %>
  </div>

  <div class="card mb-3">
    <div class="card-body">
      <div class="d-flex flex-column flex-md-row gap-2 align-items-md-center">
        <div class="btn-group" role="group" aria-label="Status filter">
          <%= link_to "All",
                      tasks_path(q: params[:q]),
                      class: "btn btn-outline-secondary #{'active' if params[:status].blank?}",
                      data: { turbo_frame: "tasks" } %>
          <%= link_to "Pending",
                      tasks_path(status: "pending", q: params[:q]),
                      class: "btn btn-outline-secondary #{'active' if params[:status] == 'pending'}",
                      data: { turbo_frame: "tasks" } %>
          <%= link_to "Completed",
                      tasks_path(status: "completed", q: params[:q]),
                      class: "btn btn-outline-secondary #{'active' if params[:status] == 'completed'}",
                      data: { turbo_frame: "tasks" } %>
        </div>

        <%= form_with url: tasks_path, method: :get, html: { class: "ms-md-auto" }, data: { turbo_frame: "tasks" } do |f| %>
          <div class="input-group">
            <%= hidden_field_tag :status, params[:status] if params[:status].present? %>
            <%= f.text_field :q, value: params[:q], class: "form-control", placeholder: "Search title or descriptionâ€¦" %>
            <button class="btn btn-outline-primary" type="submit">Search</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <turbo-frame id="tasks">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
      <% @tasks.each do |task| %>
        <div class="col">
          <%= render partial: "tasks/task_card", locals: { task: task } %>
        </div>
      <% end %>
    </div>

    <div class="d-flex justify-content-center mt-3">
      <%= paginate @tasks, params: { status: params[:status], q: params[:q] } %>
    </div>
  </turbo-frame>
</div>
